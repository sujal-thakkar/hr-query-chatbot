# Example environment variables for backend (do NOT commit real keys)
# Copy to .env and fill with your values locally. In production (Render), set via dashboard.

# AI Keys
GEMINI_API_KEY=
OPENAI_API_KEY=

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# Rate limits
CHAT_RATE_LIMIT=5/minute
HEALTH_RATE_LIMIT=30/minute
ROOT_RATE_LIMIT=30/minute
RAG_STATUS_RATE_LIMIT=10/minute
SEARCH_RATE_LIMIT=10/minute
DEBUG_EMPLOYEES_RATE_LIMIT=5/minute

# Query bounds
MIN_TOP_K=1
MAX_TOP_K=20

# Cache settings
QUERY_CACHE_TTL_SECONDS=300
AI_SUMMARY_CACHE_TTL_SECONDS=600
CACHE_BACKEND=auto

# Redis (optional)
REDIS_URL=

# Embedding cache
EMBEDDING_CACHE_ENABLED=true
EMBEDDING_CACHE_DIR=./backend/.cache

# FAISS settings
FAISS_ENABLED=true
FAISS_METRIC=ip

# Data paths
DB_DIR=/app/data
DATASET_JSON_PATH=/app/dataset/employees.json

